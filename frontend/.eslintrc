{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "plugin:import/react"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": 2,
    "import/no-extraneous-dependencies": 2,
    "import/no-named-as-default": 0
  },
  "globals": {
    "checkMobile": "readonly",
    "checkCentering": "readonly",
    "checkPictureDimension": "readonly",
    "scrollWithOffset": "readonly"
  },
  "ignorePatterns": ["node_modules/", ".github/workflows"]
}
